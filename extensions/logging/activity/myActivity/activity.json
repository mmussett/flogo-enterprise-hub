{
    "name": "myActivity",
    "version": "1.0.0",
    "type": "flogo:activity",
    "title": "myActivity",
    "author": "TIBCO Developer Hub",
    "display": {
        "category": "logging",
        "visible": true,
        "description": "",
        "smallIcon": "icons/activity-icon@2x.png",
		"largeIcon": "icons/activity-icon@3x.png"
    },
    "feature": {
        "retry": {
            "enabled": true
        }
    },
    "ref": "github.com/mmussett/flogo-enterprise-hub/extensions/logging/activity/myActivity",
    "settings": [
        {
            "name": "aSettingString",
            "type": "string",
            "required": true,
            "description": "A string setting",
            "value":"Default_Value",
            "display": {
                "name": "A string setting",
                "description": "Example of a string setting",
                "required": true,
                "type":"string",
                "appPropertySupport": true
            }
        }       
        ,
        {
            "name": "aSettingBoolean",
            "type": "boolean",
            "required": true,
            "value": false,
            "display": {
                "name": "A boolean setting",
                "description": "Example of a boolean setting",
                "visible": true
            }
        }       
        ,
        {
            "name": "aSettingStringDropdown",
            "type": "string",
            "required": true,
            "allowed": [
                "Option 1",
                "Option 2",
                "Option 3"
            ],
            "value": "Option 1",
            "display": {
                "name": "A dropdown setting",
                "description": "Example of a Setting Dropdown.",
                "type": "dropdown",
                "selection": "single"
            }
        }
    ],
    "inputs": [        
        {
            "name": "anInputString",
            "type": "string",
            "required": true
        }                       
        ,
        {
            "name": "anInputBoolean",
            "type": "boolean",
            "required": true
        }          
        ,
        {
            "name": "anInputInteger",
            "type": "integer",
            "required": true
        }   
        ,
        {
            "name": "anInputDecimal",
            "type": "number",
            "required": true
        }           
        ,
        {
            "name": "anObject",
            "type": "object"
        }                   
        ,
        {
            "name": "anInputObjectWithSchema",
            "type": "object",
            "required": true,
            "display": {
                "name": "JSON Schema",
                "description": "An example JSON-based object",
                "type": "texteditor",
                "syntax": "json",
                "mappable": true,
                "visible": true
            }
        }                           
        ,
        {
            "name": "anInputParameters",
            "type": "object",
            "display": {
                "name": "Parameters",
                "description": "An example Parameter-based object",
                "type": "params",
                "mappable": true,
                "schema": "{\"type\": \"array\",\"items\": {\"type\": \"object\",\"properties\": {\"parameterName\": {\"type\": \"string\"},\"type\": {\"type\": {\"enum\": [\"string\"]}}}}}"
            }
        }
    ],
    "outputs": [
        {
           "name": "anOutputString",
           "type": "string"
        }                       
        ,
        {
            "name": "anOutputBoolean",
            "type": "boolean"
        }               
        ,
        {
            "name": "anOutputDecimal",
            "type": "number"
        }          
        ,
        {
           "name": "anOutputObject",
           "type": "object"
        }          
        ,
        {
            "name": "anOutputObjectWithSchema",
            "type": "object",
            "display": {
                "name": "JSON Schema",
                "description": "An example JSON object",
                "type": "texteditor",
                "syntax": "json"
            }
        }
    ]
}